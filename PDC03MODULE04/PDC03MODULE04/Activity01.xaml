<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03MODULE04.Activity01">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="List View"/>

            <ListView SelectionMode="Single" SelectedItem="Item No. 1">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        
                        <x:String>Item No. 1</x:String>
                        <x:String>Item No. 2</x:String>
                        <x:String>Item No. 3</x:String>
                        <x:String>Item No. 4</x:String>
                        <x:String>Item No. 5</x:String>
                        
                    </x:Array> 
                </ListView.ItemsSource>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>